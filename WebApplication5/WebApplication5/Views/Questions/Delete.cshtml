@model WebApplication5.Models.Question

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this question?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Content
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Mark
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mark)
        </dd>

        <dt>
            Category Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt>
            Delete this question will also delete @Model.Answers.ToList().Count followwing answers:
        </dt>
        @foreach (var item in Model.Answers)
        {
            <dd>
                @item.Name
            </dd>
        }

    </dl>



    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="small button" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
