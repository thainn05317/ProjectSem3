@using WebApplication5.Models
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="The description of my page" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/normalize.css" rel="stylesheet" />
    <link href="~/Content/foundation.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.7.2.js"></script>
    @RenderSection("ClockCss", false)
</head>
<body>
    <div class="row">
        <div class="large-12 columns">

            <nav class="top-bar" data-topbar>
                <ul class="title-area">

                    <li class="name">
                        <h1>@Html.ActionLink("Webster Organization", "Index", "HomePage")</h1>
                    </li>
                    <li class="toggle-topbar menu-icon">
                        <a href="#"><span>menu</span></a>
                    </li>
                </ul>
                <section class="top-bar-section">
                    <ul class="right">
                        @if (Session["UserInfo"] == null)
                        {
                            <li>
                                @Html.ActionLink("Log in", "Login", "HomePage")
                            </li>
                        }
                        else
                        {
                            Candidate candidate = (Candidate)Session["UserInfo"];
                            <li><a href="#">Hello @candidate.Name!</a></li>
                        }
                    </ul>
                </section>
            </nav>
        </div>
    </div>
    @RenderBody()
    <footer class="row">
        <div class="large-12 columns">
            <hr>
            <div class="row">
                <div class="large-6 columns">
                    <p>© Copyright FPT Aptech Group 2.</p>
                </div>
                <div class="large-6 columns">
                    <ul class="inline-list right">
                        <li>
                            @Html.ActionLink("About Us", "AboutUs", "HomePage")
                        </li>
                        <li>
                            @Html.ActionLink("Contact Us", "ContactUs", "HomePage")
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/foundation.min.js"></script>
    @RenderSection("ClockJs", false)
    <script>
        $(document).foundation();
    </script>
    @RenderSection("ClockInit", false)
    @RenderSection("LeaveConfirmation", false)
</body>
</html>
