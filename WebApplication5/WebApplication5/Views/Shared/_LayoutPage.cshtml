@using WebApplication5.Models
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="description" content="The description of my page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/normalize.css" rel="stylesheet" />
    <link href="~/Content/foundation.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.7.2.js"></script>
    @RenderSection("ResponsiveTable", false)
    @RenderSection("Paging", false)
    @RenderSection("AutoCompleteCss", false)
    @RenderSection("ChartCss", false)
</head>
<body>
    <nav class="top-bar" data-topbar>
        <ul class="title-area">
            <li class="name">
                <h1>
                    @Html.ActionLink("Admin Site", "Index", "Questions")
                </h1>
            </li>
            <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
        </ul>
        <section class="top-bar-section">
            <ul class="left">
                <li class="divider"></li>
                <li>@Html.ActionLink("Question Bank", "Index", "Questions")</li>
                <li class="divider"></li>
                <li>@Html.ActionLink("Answer Bank", "Index", "Answers")</li>
                <li class="divider"></li>
                <li>@Html.ActionLink("Candidate Management", "Index", "Candidates")</li>
                <li class="divider"></li>
                <li>@Html.ActionLink("Statistics", "Index", "Statistics")</li>
            </ul>
            <ul class="right">
                <li>@Html.ActionLink("Sign Out", "SignOut", "Admin")</li>
            </ul>
        </section>
    </nav>
    <div class="row">
        <div class="large-12 columns">
            @RenderBody()
        </div>
    </div>
    <footer class="row">
        <div class="large-12 columns">
            <hr />
            <div class="row">
                <div class="large-6 columns">
                    <p>© Copyright FPT-Aptech. Group 2.</p>
                </div>
                <div class="large-6 columns">
                    <ul class="inline-list right">
                        <li>@Html.ActionLink("About Us", "AboutUs", "HomePage")</li>
                        <li>@Html.ActionLink("Contact Us", "ContactUs", "HomePage")</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/foundation.min.js"></script>
    @RenderSection("ChartJs", false)
    <script>
        $(document).foundation();
    </script>
    @RenderSection("Chart", false)
    @RenderSection("ChartInit", false)
    @RenderSection("DataAbide", false)
    @RenderSection("Validation", false)
    @RenderSection("ResponsiveTableJs", false)
    @RenderSection("Ajax", false)
    @RenderSection("AutoCompleteJs", false)
    @RenderSection("AutoScript", false)
    @RenderSection("DatePicker", false)
    @RenderSection("HighChartJs", false)
</body>
</html>
