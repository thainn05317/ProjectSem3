@model WebApplication5.Models.Answer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Create</h2>
<hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="large-12 columns">
            <label>Answer:</label>
            @Html.EditorFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <label>Question:</label>
            @Html.DropDownList("QuestionId")
            @Html.ValidationMessageFor(m=>m.QuestionId)
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <label>Right Answer:</label>
            @Html.EditorFor(m => m.IsRightAnswer)
            @Html.ValidationMessageFor(m => m.IsRightAnswer)
        </div>
    </div>
    <div class="row">
        <div class="large-6 columns">
            <a href="/Answers/Index" class="small button">Back to List</a>
        </div>
        <div class="large-6 columns">
            <input type="submit" value="Save" class="small button right" />
        </div>
    </div>
}
@section Validation{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
